			section#contact
				h2 Contato
				.desc
					.form
						form(action="/", method="POST", onsubmit="return false;")
							.form-group
								label(for="name") Nome
								input(type="text")#name.form-control
							.form-group
								label(for="email") E-mail
								input(type="email")#email.form-control
							.form-group
								label(for="msg") Mensagem
								textarea#msg.form-control
							.form-group
								button.btn.btn-primary.pull-right Enviar mensagem
					.info
						dl
							dt Endereço
							dd Rua dos Papéis, 30, Jardim Florido &bull; São Paulo, SP &bull; 99999-000
